---
- name: Install dependancies
  package:
    name:
    - apt-transport-https
    - lsb-release
    - ca-certificates
    state: latest


- name: Install Nginx apt key
  apt_key:
    url: http://nginx.org/keys/nginx_signing.key
    state: present

- name: Add Nginx Repo
  apt_repository:
    repo: deb https://nginx.org/packages/ubuntu/ {{ ansible_distribution_release }} nginx
    state: present

- name: Install Nginx
  package:
    name:
    - nginx
    state: latest
