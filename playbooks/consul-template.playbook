- name: Get consul-template tarball
  unarchive:
    src: https://releases.hashicorp.com/consul-template/0.24.1/consul-template_0.24.1_linux_amd64.tgz
    dest: /usr/bin
    remote_src: yes

- name: Make consul data dir
  file:
    path: /opt/consul-template
    state: directory
    mode: '0755'

- name: Install Consul Template Service
  copy:
    src: ../configs/consul/consul-template.service
    dest: /lib/systemd/system
    mode: '0644'
  tags:
    - "config"
